import javax.xml.stream.events.StartElement;

import org.xml.sax.Attributes;
import org.xml.sax.SAXException;
import org.xml.sax.helpers.DefaultHandler;


public class SAXhander extends DefaultHandler {

				
				public void startDocument (String uri, String localName,
			            String qName, Attributes attributes)
			throws SAXException
			{
					super.startDocument();
					System.out.println("解析开始了！");
					
					
			}
		
		 public void endDocument(String uri, String localName, String qName)
			        throws SAXException
			    {
			       super.endDocument(); 
			 System.out.println("解析结束了!");
			 
			    }
		 
		public void  startElement (String uri,String localName, String qName, Attributes attributes) throws SAXException
		{
			super.startElement(uri, localName, qName, attributes);
			if(qName.equals("book"))
			{
					String value=attributes.getValue("author");
					System.out.println(value);
			}
			
				
		
		}


}
